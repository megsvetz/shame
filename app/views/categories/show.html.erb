<div class="container text-center">
  <h1><%= @category.title %></h1>
  <%= image_tag(@category.cat_pic.url(:medium), :class => "img-responsive img-center img-thumbnail")%><br><br>
  <%= link_to 'Add A Post', new_post_path(category_id: @category.id), :style => "display:inline-block;color:black;text-decoration:underline;" %>
   <div class="row text-center">
    <% @cat_posts.each do |p| %>
      <div class="col-sm-6 col-md-4 portfolio-item">
          <a href="#"><%= image_tag(p.post_pic.url) %></a>
          <h3><a href="#"><%= p.name %></a></h3>
          <%= link_to(image_tag("bad.png"), post_good_path(p.id), method: "post") %>
          <%= link_to(image_tag("good.png"), post_bad_path(p.id), method: "post") %>
      </div>
    <% end %>
    <br>
  </div>
</div>