<div class="container text-center">
  <h1 class="sign-up"><%= @category.title %></h1>
  <%= image_tag(@category.cat_pic.url(:medium), :class => "img-responsive img-center img-thumbnail")%><br><br>
  <%= link_to '<button type="button">Add A Post</button>'.html_safe, new_post_path(category_id: @category.id), :class => "btn", :style => "display:inline-block;color:black;text-decoration:underline;" %>
   <div class="row text-center">
    <% @cat_posts.each do |p| %>
      <div class="col-sm-6 col-md-4 portfolio-item well">
          <%= link_to (image_tag(p.post_pic.url(:thumb), :class => "img-responsive img-center img-thumbnail")), post_path(p) %>
          <h3><%= link_to p.name, post_path(p), :style => "color:black" %></h3>
          <p>
            <div class="row banana-vote">
            <%= link_to(image_tag("good.png"), post_good_path(p.id), method: "post") %>
            <%= p.post_ratings.total_count %>
            <%= link_to(image_tag("bad.png"), post_bad_path(p.id), method: "post") %>
            </div>
          </p>
      </div>
    <% end %>
    <br>
  </div>
</div>
